<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background -->
    <item android:top="85dp">
        <shape android:shape="oval">
            <solid android:color="#1F5573" />
            <corners android:radius="10dp" />
        </shape>
    </item>
    <!-- Shadow -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#00ffffff" /> <!-- Đặt màu trong suốt -->
            <corners android:radius="10dp" />
            <size
                android:width="90dp"
                android:height="90dp" />
        </shape>
    </item>
</layer-list>