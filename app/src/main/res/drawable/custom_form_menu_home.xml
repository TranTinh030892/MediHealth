<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#ECEFFA" />
            <corners android:radius="15dp" />
        </shape>
    </item>
    <!-- Border -->
    <item
        android:bottom="1.2dp"
        android:right="1.3dp"
        android:left="1.3dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <corners android:radius="15dp" />
        </shape>
    </item>
</layer-list>