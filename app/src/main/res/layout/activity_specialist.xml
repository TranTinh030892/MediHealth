<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:background="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_width="300dp"
        android:layout_height="wrap_content">

        <ScrollView
            android:id="@+id/body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/specialist_all"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <ImageView
                        android:id="@+id/icon_menu4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_centerVertical="true"
                        android:backgroundTint="@color/mainColor"
                        android:background="@drawable/stethoscope" />

                    <TextView
                        android:id="@+id/text_specialistALl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chưa xác định"
                        android:fontFamily="sans-serif-medium"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:paddingLeft="30dp"
                        android:textAllCaps="false"
                        android:textSize="17dp"
                        android:textStyle="normal"
                        android:textColor="#252F35" />
                </RelativeLayout>

                <View
                    android:id="@+id/g3"
                    android:layout_below="@id/specialist_all"
                    android:layout_width="match_parent"
                    android:layout_height="1.2dp"
                    android:layout_centerVertical="true"
                    android:background="#ECEFFD" />

                <RelativeLayout
                    android:id="@+id/specialist2"
                    android:layout_below="@id/g3"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_centerVertical="true"
                        android:backgroundTint="@color/mainColor"
                        android:background="@drawable/stethoscope" />

                    <TextView
                        android:id="@+id/text_specialist2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tai mũi họng"
                        android:fontFamily="sans-serif-medium"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:paddingLeft="30dp"
                        android:textAllCaps="false"
                        android:textSize="17dp"
                        android:textStyle="normal"
                        android:textColor="#252F35" />
                </RelativeLayout>

                <View
                    android:id="@+id/g4"
                    android:layout_below="@id/specialist2"
                    android:layout_width="match_parent"
                    android:layout_height="1.2dp"
                    android:layout_centerVertical="true"
                    android:background="#ECEFFD" />

                <RelativeLayout
                    android:id="@+id/specialist3"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/g4"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_centerVertical="true"
                        android:backgroundTint="@color/mainColor"
                        android:background="@drawable/stethoscope" />

                    <TextView
                        android:id="@+id/text_specialist3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hô hấp"
                        android:fontFamily="sans-serif-medium"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:paddingLeft="30dp"
                        android:textAllCaps="false"
                        android:textSize="17dp"
                        android:textStyle="normal"
                        android:textColor="#252F35" />
                </RelativeLayout>

                <View
                    android:id="@+id/g5"
                    android:layout_below="@id/specialist3"
                    android:layout_width="match_parent"
                    android:layout_height="1.2dp"
                    android:layout_centerVertical="true"
                    android:background="#ECEFFD" />

                <RelativeLayout
                    android:id="@+id/specialist4"
                    android:layout_below="@id/g5"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_centerVertical="true"
                        android:backgroundTint="@color/mainColor"
                        android:background="@drawable/stethoscope" />

                    <TextView
                        android:id="@+id/text_specialist4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tim mạch"
                        android:fontFamily="sans-serif-medium"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:paddingLeft="30dp"
                        android:textAllCaps="false"
                        android:textSize="17dp"
                        android:textStyle="normal"
                        android:textColor="#252F35" />
                </RelativeLayout>

                <View
                    android:id="@+id/g6"
                    android:layout_below="@id/specialist4"
                    android:layout_width="match_parent"
                    android:layout_height="1.2dp"
                    android:layout_centerVertical="true"
                    android:background="#ECEFFD" />

                <RelativeLayout
                    android:id="@+id/specialist5"
                    android:layout_below="@id/g6"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_centerVertical="true"
                        android:backgroundTint="@color/mainColor"
                        android:background="@drawable/stethoscope" />

                    <TextView
                        android:id="@+id/text_specialist5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ngoại khoa"
                        android:fontFamily="sans-serif-medium"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:paddingLeft="30dp"
                        android:textAllCaps="false"
                        android:textSize="17dp"
                        android:textStyle="normal"
                        android:textColor="#252F35" />
                </RelativeLayout>

                <View
                    android:id="@+id/g7"
                    android:layout_below="@id/specialist5"
                    android:layout_width="match_parent"
                    android:layout_height="1.2dp"
                    android:layout_centerVertical="true"
                    android:background="#ECEFFD" />

                <RelativeLayout
                    android:id="@+id/specialist6"
                    android:layout_below="@id/g7"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_centerVertical="true"
                        android:backgroundTint="@color/mainColor"
                        android:background="@drawable/stethoscope" />

                    <TextView
                        android:id="@+id/text_specialist6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mắt"
                        android:fontFamily="sans-serif-medium"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:paddingLeft="30dp"
                        android:textAllCaps="false"
                        android:textSize="17dp"
                        android:textStyle="normal"
                        android:textColor="#252F35" />
                </RelativeLayout>

                <View
                    android:id="@+id/g8"
                    android:layout_below="@id/specialist6"
                    android:layout_width="match_parent"
                    android:layout_height="1.2dp"
                    android:layout_centerVertical="true"
                    android:background="#ECEFFD" />

                <RelativeLayout
                    android:id="@+id/specialist7"
                    android:layout_below="@id/g8"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_centerVertical="true"
                        android:backgroundTint="@color/mainColor"
                        android:background="@drawable/stethoscope" />

                    <TextView
                        android:id="@+id/text_specialist7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thần kinh"
                        android:fontFamily="sans-serif-medium"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:paddingLeft="30dp"
                        android:textAllCaps="false"
                        android:textSize="17dp"
                        android:textStyle="normal"
                        android:textColor="#252F35" />
                </RelativeLayout>

                <View
                    android:id="@+id/g9"
                    android:layout_below="@id/specialist7"
                    android:layout_width="match_parent"
                    android:layout_height="1.2dp"
                    android:layout_centerVertical="true"
                    android:background="#ECEFFD" />

                <RelativeLayout
                    android:id="@+id/specialist8"
                    android:layout_below="@id/g9"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_centerVertical="true"
                        android:backgroundTint="@color/mainColor"
                        android:background="@drawable/stethoscope" />

                    <TextView
                        android:id="@+id/text_specialist8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Xương khớp"
                        android:fontFamily="sans-serif-medium"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:paddingLeft="30dp"
                        android:textAllCaps="false"
                        android:textSize="17dp"
                        android:textStyle="normal"
                        android:textColor="#252F35" />
                </RelativeLayout>
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>
</RelativeLayout>