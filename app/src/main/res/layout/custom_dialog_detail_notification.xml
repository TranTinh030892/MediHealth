<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/custom_toplayout_home_2">

        <RelativeLayout
            android:id="@+id/top_layout"
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/block_icon"
                android:background="@drawable/circular_bg"
                android:backgroundTint="#67A0D8"
                android:layout_width="35dp"
                android:layout_height="35dp">

                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:backgroundTint="@color/white"
                    android:background="@drawable/notification" />
            </RelativeLayout>

            <TextView
                android:layout_toEndOf="@id/block_icon"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đặt lịch thành công"
                android:textSize="18sp"
                android:textColor="@color/text_Color"
                android:fontFamily="sans-serif-medium" />

            <ImageView
                android:id="@+id/icon_close"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_close" />
        </RelativeLayout>
        //

        <View
            android:id="@+id/line_horizontal"
            android:layout_below="@id/top_layout"
            android:layout_width="match_parent"
            android:layout_height="1.2dp"
            android:background="#ECEFFD" />

        <RelativeLayout
            android:layout_below="@id/line_horizontal"
            android:paddingTop="20dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:paddingBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/notification_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="5"
                android:textSize="15sp"
                android:ellipsize="end"
                android:textColor="@color/text_Color"
                android:text="" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>