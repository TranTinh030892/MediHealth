<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EBEEF8"
    tools:context=".activities.appointment.Confirm_Appointment">
    <RelativeLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/mainColor"
            android:padding="10dp"
            android:id="@+id/toolbar">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thông tin lịch khám"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"/>

            <ImageButton
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/icon_back"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="@color/white"
                android:layout_centerVertical="true"
                android:id="@+id/back_btn"/>

            <ImageButton
                android:id="@+id/support"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="5dp"
                android:background="?attr/selectableItemBackground"
                android:src="@drawable/icon_support" />
        </RelativeLayout>
    </RelativeLayout>
    //
    <RelativeLayout
        android:id="@+id/body_layout"
        android:layout_below="@id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="500dp">
        <RelativeLayout
            android:id="@+id/form_detail"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:padding="20dp"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/block_fullName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/title_fullName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Họ và tên"
                    android:textColor="@color/text_Color"
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/fullName_Customer"
                    android:layout_width="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_height="wrap_content"
                    android:text="Lê Văn Mạnh"
                    android:textSize="20sp"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/block_birth"
                android:layout_below="@id/block_fullName"
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/title_birth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ngày sinh"
                    android:textColor="@color/text_Color"
                    android:textSize="18sp" />
                <TextView
                    android:id="@+id/birth"
                    android:layout_width="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_height="wrap_content"
                    android:text="12/09/2002"
                    android:textSize="18sp"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/block_gender"
                android:layout_below="@id/block_birth"
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/title_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giới tính"
                    android:textColor="@color/text_Color"
                    android:textSize="18sp" />
                <TextView
                    android:id="@+id/gender"
                    android:layout_width="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_height="wrap_content"
                    android:text="Nam"
                    android:textSize="18sp"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/block_date"
                android:layout_below="@id/block_gender"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/title_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ngày khám"
                    android:textColor="@color/text_Color"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_height="wrap_content"
                    android:text="30/2/2024"
                    android:textSize="18sp"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/block_specialist"
                android:layout_below="@id/block_date"
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/title_specialist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Chuyên khoa"
                    android:textColor="@color/text_Color"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/specialist"
                    android:layout_width="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_height="wrap_content"
                    android:text="Hô hấp"
                    android:textSize="18sp"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/block_doctor"
                android:layout_below="@id/block_specialist"
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/title_doctor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bác sĩ"
                    android:textColor="@color/text_Color"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/nameDoctor"
                    android:layout_width="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_height="wrap_content"
                    android:text="Vũ Tiến Đạt"
                    android:textSize="18sp"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/block_numberOrder"
                android:layout_below="@id/block_doctor"
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/title_numberOrder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thứ tự khám"
                    android:textColor="@color/text_Color"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/numberOrder"
                    android:layout_width="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_height="wrap_content"
                    android:text="112"
                    android:textSize="18sp"/>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
    //
    <RelativeLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/white"
        android:padding="10dp"
        android:layout_alignParentBottom="true">
        <RelativeLayout
            android:id="@+id/bottom_content"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn_cancel"
                android:text="Hủy bỏ"
                android:textColor="@color/mainColor"
                android:textAllCaps="false"
                android:textSize="18dp"
                android:background="@drawable/custom_button"
                android:backgroundTint="#EBEEF8"
                android:layout_width="180dp"
                android:layout_height="47dp"/>
            <Button
                android:id="@+id/btn_enter"
                android:text="Xác nhận"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:layout_width="180dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/custom_button"
                android:layout_toEndOf="@id/btn_cancel"
                android:layout_height="47dp"/>
        </RelativeLayout>
    </RelativeLayout>
    //
</RelativeLayout>