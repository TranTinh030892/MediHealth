<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activitys.profile.EditProfile">
    <RelativeLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:background="@color/mainColor"
        android:paddingEnd="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingStart="7dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sửa hồ sơ"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:fontFamily="sans-serif-medium"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>

        <ImageButton
            android:layout_width="32dp"
            android:layout_height="25dp"
            android:src="@drawable/icon_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/white"
            android:layout_centerVertical="true"
            android:id="@+id/back_btn"/>
        <ImageButton
            android:id="@+id/btn_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="3dp"
            android:background="@drawable/icon_dots"
            android:layout_alignParentEnd="true"
            android:backgroundTint="@color/white"/>
    </RelativeLayout>
    //
    <RelativeLayout
        android:layout_below="@id/top_layout"
        android:background="#EBEEF8"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            android:id="@+id/card_fullName"
            app:cardCornerRadius="15dp"
            android:layout_margin="15dp"
            app:cardElevation="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/block_fullName"
                android:paddingStart="15dp"
                android:paddingTop="15dp"
                android:paddingBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/title_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Họ và tên"
                    android:textSize="15sp"/>
                <EditText
                    android:id="@+id/fullName_user"
                    android:enabled="false"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/title_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Trần Đình Tính"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:background="@drawable/custom_edit_text_login"
                    android:textSize="18sp"
                    android:textColor="@color/text_Color"
                    android:fontFamily="sans-serif-medium"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_phone"
            android:layout_below="@id/card_fullName"
            app:cardCornerRadius="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            app:cardElevation="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/block_phone"
                android:paddingStart="15dp"
                android:paddingTop="15dp"
                android:paddingBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/title_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Số điện thoại"
                    android:textSize="15sp"/>
                <EditText
                    android:id="@+id/phoneNumber_user"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/title_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0812930841"
                    android:enabled="false"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:background="@drawable/custom_edit_text_login"
                    android:textSize="18sp"
                    android:textColor="@color/text_Color"
                    android:fontFamily="sans-serif-medium"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_address"
            android:layout_below="@id/card_phone"
            app:cardCornerRadius="15dp"
            android:layout_margin="15dp"
            app:cardElevation="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/block_address"
                android:paddingStart="15dp"
                android:paddingTop="15dp"
                android:paddingBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/title_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Địa chỉ"
                    android:textSize="15sp"/>
                <EditText
                    android:id="@+id/address_user"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/title_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hà Nam"
                    android:enabled="false"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:background="@drawable/custom_edit_text_login"
                    android:textSize="18sp"
                    android:textColor="@color/text_Color"
                    android:fontFamily="sans-serif-medium"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_birth"
            android:layout_below="@id/card_address"
            app:cardCornerRadius="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            app:cardElevation="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/block_birth"
                android:paddingStart="15dp"
                android:paddingTop="15dp"
                android:paddingBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/title_birth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ngày sinh"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/birth_user"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/title_birth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="03/08/2002"
                    android:enabled="false"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:background="@drawable/custom_edit_text_login"
                    android:textSize="18sp"
                    android:textColor="@color/text_Color"
                    android:fontFamily="sans-serif-medium"/>
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_below="@id/title_birth"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="5dp"
                    android:background="?attr/selectableItemBackground"
                    android:src="@drawable/custom_calendar" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_heightAndweight"
            android:layout_below="@id/card_birth"
            app:cardCornerRadius="15dp"
            android:layout_margin="15dp"
            app:cardElevation="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/block_heightAndweight"
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_alignParentStart="true"
                    android:layout_toStartOf="@id/line_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/titleHeight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chiều cao (cm)"
                        android:textSize="15sp"/>
                    <EditText
                        android:id="@+id/height_user"
                        android:layout_below="@id/titleHeight"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="167"
                        android:enabled="false"
                        android:singleLine="true"
                        android:maxLines="1"
                        android:background="@drawable/custom_edit_text_login"
                        android:textSize="18sp"
                        android:textColor="@color/text_Color"
                        android:fontFamily="sans-serif-medium"/>
                </RelativeLayout>
                <View
                    android:id="@+id/line_vertical"
                    android:background="@color/light_gray"
                    android:layout_width="0.7dp"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"/>
                <RelativeLayout
                    android:layout_toEndOf="@id/line_vertical"
                    android:layout_alignParentEnd="true"
                    android:paddingStart="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/titleWeight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cân nặng (kg)"
                        android:textSize="15sp"/>
                    <EditText
                        android:id="@+id/weight_user"
                        android:layout_below="@id/titleWeight"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="56"
                        android:enabled="false"
                        android:singleLine="true"
                        android:maxLines="1"
                        android:background="@drawable/custom_edit_text_login"
                        android:textSize="18sp"
                        android:textColor="@color/text_Color"
                        android:fontFamily="sans-serif-medium"/>
                </RelativeLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_gender"
            android:layout_below="@id/card_heightAndweight"
            app:cardCornerRadius="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            app:cardElevation="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/block_gender"
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/title_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giới tính"
                    android:textSize="15sp"/>
                <RadioGroup
                    android:id="@+id/gender_user"
                    android:layout_below="@id/title_gender"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:id="@+id/male"
                        android:text="Nam"
                        android:enabled="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <RadioButton
                        android:id="@+id/female"
                        android:text="Nữ"
                        android:enabled="false"
                        android:layout_marginLeft="116dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RadioGroup>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/bottom_Layout"
            android:visibility="gone"
            android:background="@color/white"
            app:cardElevation="20dp"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="77dp">
            <RelativeLayout
                android:id="@+id/enterBook"
                android:background="@drawable/custom_button"
                android:clickable="true"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="48dp">
                <TextView
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lưu lại"
                    android:textAllCaps="false"
                    android:textSize="20sp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/white"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</RelativeLayout>