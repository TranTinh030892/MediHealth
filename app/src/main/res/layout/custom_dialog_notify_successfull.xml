<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/notify_form_sucessfull"
        android:layout_width="match_parent"
        android:background="@drawable/custom_inforbook"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <Button
            android:id="@+id/icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/checked"/>
        <RelativeLayout
            android:id="@+id/notify_title"
            android:layout_below="@id/icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/title_under"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đặt lịch thành công"
                android:textColor="@color/black"
                android:textSize="19sp"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/title_below"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/title_under"
                android:text="Bạn đã đặt lịch khám thành công tại Medi Health."
                android:textSize="16sp"
                android:textColor="@color/black"
                android:lineSpacingExtra="3dp"
                android:layout_marginTop="9dp"
                android:gravity="center_horizontal"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        //
        <RelativeLayout
            android:id="@+id/notify_button"
            android:layout_width="match_parent"
            android:layout_marginTop="25dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/notify_title"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn_Home"
                android:text="Trang chủ"
                android:textColor="@color/mainColor"
                android:textAllCaps="false"
                android:textSize="18dp"
                android:layout_marginLeft="3dp"
                android:background="@drawable/custom_button"
                android:backgroundTint="#F0F1F8"
                android:layout_width="180dp"
                android:layout_height="47dp"/>

            <Button
                android:id="@+id/btn_detail"
                android:text="Theo dõi lịch hẹn"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:layout_width="180dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/custom_button"
                android:layout_toEndOf="@id/btn_Home"
                android:layout_height="47dp"/>
        </RelativeLayout>
    </RelativeLayout>