<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_SPECIAL_USE" />

    <uses-permission
        android:name="android.permission.POST_NOTIFICATIONS"
        tools:ignore="ReservedSystemPermission" />

    <uses-permission android:name="android.permission.ACCESS_NOTIFICATION_POLICY" />

    <uses-permission
        android:name="android.permission.REQUEST_IGNORE_BATTERY_OPTIMIZATIONS"
        tools:ignore="ReservedSystemPermission" />

    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MediHealth"
        tools:targetApi="31">
        <activity
            android:name=".activities.Search.SearchDrugActivity"
            android:windowSoftInputMode="stateVisible"
            android:exported="false" />
        <activity
            android:name=".activities.appointment.Infor_Appoitment_Activity"
            android:exported="false" />
        <activity
            android:name=".activities.appointment.Confirm_Appointment"
            android:exported="false" />
        <activity
            android:name=".activities.appointment.Specialist"
            android:exported="false" />
        <activity
            android:name=".activities.chat.EmployeeChat_Activity"
            android:exported="false" />
        <activity
            android:name=".activities.chat.Employee_MainActivity"
            android:exported="false" />
        <activity
            android:name=".activities.chat.ListEmployee"
            android:exported="false" />
        <activity
            android:name=".activities.Login"
            android:exported="false"
            android:windowSoftInputMode="stateVisible" />
        <activity
            android:name=".activities.Profile"
            android:exported="false"
            android:windowSoftInputMode="stateVisible" />
        <activity
            android:name=".activities.MainActivity"
            android:exported="false" />
        <activity
            android:name=".activities.chat.UserChat_Activity"
            android:exported="false"
            android:windowSoftInputMode="stateVisible" />
        <activity
            android:name=".activities.Splash"
            android:name=".activitys.prescription_schedule.PrescriptionManagement"
            android:exported="false" />
        <activity
            android:name=".activitys.prescription_schedule.PrescriptionDetailManagement"
            android:exported="false" />
        <activity
            android:name=".activitys.prescription_schedule.EnterNewPrescriptionItemsActivity"
            android:exported="false" />
        <activity
            android:name=".activitys.prescription_schedule.EnterNewSchedulesActivity"
            android:exported="false" />
        <activity
            android:name=".activitys.prescription_schedule.EditPrescriptionItemsActivity"
            android:exported="false" />
        <activity
            android:name=".activitys.prescription_schedule.EditSchedulesActivity"
            android:exported="false" />
        <activity
            android:name=".activitys.prescription_schedule.DrugUserManagement"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".notifications.FCM_Notification.MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <receiver
            android:name=".models.NotificationDismissReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="com.example.medihealth.ACTION_DISMISS_NOTIFICATION" />
            </intent-filter>
        </receiver>

        <service
            android:name=".services.RemindService"
            android:foregroundServiceType="specialUse" />

        <receiver android:name=".receiver.RemindReceiver" />
        <receiver android:name="com.example.medihealth.receiver.SnoozeRemindReceiver" />
    </application>

</manifest>